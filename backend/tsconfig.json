{
    "compilerOptions": {
      "target": "ES2020",                // 최소 ES2017 이상이어야 함
      "module": "ES2022",                // 'ES2022' 또는 'ESNext' 권장
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
    }
  }
  